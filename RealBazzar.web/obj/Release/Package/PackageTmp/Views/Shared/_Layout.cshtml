
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Real Bazzar</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Real Bazzar">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/responsive.css">
    @*<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>*@
    <script src="~/Content/styles/bootstrap4/popper.js"></script>
    <script src="~/Content/styles/bootstrap4/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/plugins/themify-icons/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/single_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/single_responsive.css">
    <script src="~/Content/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/plugins/easing/easing.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
    <script src="~/Content/js/custom.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/styles/categories_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/categories_responsive.css">
    <script src="~/Content/js/categories_custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>

    <script src="~/Content/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Content/js/single_custom.js"></script>

    <link rel="icon" src="~/favicon.ico" type="image/x-icon" />
    <style>
        .disabled {
            background: none repeat scroll 0 0 burlyWood;
            cursor: default !important;
        }
    </style>
</head>
<body>
    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left">free shipping on all India orders over 5000</div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">

                                    <!-- Currency / Language / My Account -->

                                    <li class="currency">
                                        <a href="#">
                                            InR &nbsp; ₹
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="currency_selection">
                                            <li><a href="#">INR &nbsp; ₹</a></li>

                                        </ul>
                                    </li>
                                    <li class="language">
                                        <a href="#">
                                            English
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="language_selection">
                                            <li><a href="#">English</a></li>

                                        </ul>
                                    </li>
                                    <li class="account">
                                        @if (User.Identity.IsAuthenticated)
                                        {

                                            <a href="#">
                                                @User.Identity.Name
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="#">
                                                My Account
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                        }
                                        <ul class="account_selection">
                                            @if (User.Identity.IsAuthenticated)
                                            {

                                                <li> <a href="@Url.Action("LogOut","Home")">SignOut</a> </li>
                                                <li><a href="@Url.Action("MyOrder","Home")">My Orders</a></li>
                                                if (User.IsInRole("Admin"))
                                                {
                                                    <li><a href="@Url.Action("Index","Product")">Admin Panel</a></li>
                                                }

                                            }
                                            else
                                            {
                                                <li><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in" aria-hidden="true"></i>Sign In</a></li>
                                                <li><a href="@Url.Action("Register", "Account")"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                                            }
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="@Url.Action("Index","Home")">Real<span>Bazzar</span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">
                                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                                    <li><a href="@Url.Action("Index","Shop")">shop</a></li>
                                    <li><a href="@Url.Action("WishList","Shop")">WishList</a></li>

                                    <li><a href="@Url.Action("Contact","Home")">contact</a></li>
                                </ul>
                                <ul class="navbar_user">
                                    <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>

                                    <li class="checkout">
                                        <a href="@Url.Action("Checkout","Shop")">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            <span id="checkout_items" class="checkout_items">0</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>

        <div class="fs_menu_overlay"></div>
        <div class="hamburger_menu">
            <div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
            <div class="hamburger_menu_content text-right">
                <ul class="menu_top_nav">
                    <li class="menu_item has-children">
                        <a href="#">
                            INR
                            <i class="fa fa-angle-down"></i>
                        </a>

                    </li>
                    <li class="menu_item has-children">
                        <a href="#">
                            English
                            <i class="fa fa-angle-down"></i>
                        </a>

                    </li>
                    <li class="menu_item has-children">

                        @if (User.Identity.IsAuthenticated)
                        {

                            <a href="#">
                                @User.Identity.Name
                                <i class="fa fa-angle-down"></i>
                            </a>
                        }
                        else
                        {
                            <a href="#">
                                My Account
                                <i class="fa fa-angle-down"></i>
                            </a>
                        }

                        <ul class="menu_selection">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in" aria-hidden="true"></i>Sign In</a></li>
                                <li><a href="@Url.Action("Register", "Account")"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                            }
                            else
                            {
                                <li> <a href="@Url.Action("LogOut","Home")">SignOut</a> </li>
                                <li><a href="@Url.Action("MyOrder","Home")">My Orders</a></li>
                                if (User.IsInRole("Admin"))
                                {
                                    <li><a href="@Url.Action("Index","Product")">Admin Panel</a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="menu_item"><a href="@Url.Action("Index","Home")">home</a></li>
                    <li class="menu_item"><a href="@Url.Action("Index","Shop")">shop</a></li>
                    <li class="menu_item"><a href="@Url.Action("Whislist","Shop")">WhisList</a></li>

                    <li class="menu_item"><a href="@Url.Action("Contact","Home")">contact</a></li>
                </ul>
            </div>
        </div>

        @RenderBody()

        <!-- Newsletter -->

        <div class="newsletter">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">
                            <h4>Newsletter</h4>
                            <p>Subscribe to our newsletter and get 20% off your first purchase</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <form action="post">
                            <div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">
                                <input id="newsletter_email" type="email" placeholder="Your email" required="required" data-error="Valid email is required.">
                                <button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                            <ul class="footer_nav">
                                <li><a href="#">Blog</a></li>
                                <li><a href="#">FAQs</a></li>
                                <li><a href="@Url.Action("Contact","Home")">Contact us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                            <ul>

                                <li><a href="@ConfigServices.Instance.getConfigs("FacebookKey").Value"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="@ConfigServices.Instance.getConfigs("Twitter").Value"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="@ConfigServices.Instance.getConfigs("Instagram").Value"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a href="@ConfigServices.Instance.getConfigs("Skype").Value"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                <li><a href="@ConfigServices.Instance.getConfigs("Pin").Value"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer_nav_container">
                            <div class="cr">©2018<i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="#">RealBazzar</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <script>
        var Productcartlist;



        $(".butCart").click(function () {

            var productId = $(this).attr('data-id');


            var existingProductCookies = $.cookie('CartProduct');

            if (existingProductCookies != undefined && existingProductCookies != "" && existingProductCookies != null) {
                Productcartlist = existingProductCookies.split('-');

            }
            else {
                Productcartlist = [];

            }
            debugger;
            var Wishlist;
            existingWishlistCookies = $.cookie('WishList');
            Wishlist = existingWishlistCookies.split('-');
            function arrayRemove(Wishlist, productId) {

                return Wishlist.filter(function (ele) {
                    return ele != productId;
                });

            }

            Wishlist = arrayRemove(Wishlist, productId);

            $.cookie('WishList', Wishlist.join('-'), { path: '/' });

            Productcartlist.push(productId);
            $.cookie('CartProduct', Productcartlist.join('-'), { path: '/' });

            updateCount();
            swal("Add To Cart!", "You Product Added to Cart!", "success");
        });

    </script>
</body>
</html>
