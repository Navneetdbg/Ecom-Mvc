                                <td class="text-success"><a href="@Url.Action("Details","Product",new { Id= item.Id})">@item.Name</a></td>
                                <td>
                                    <img src="~/Content/images/@item.ImageURL" style="width:100px;height:100px" />
                                </td>
                                <td>@item.Price</td>
                                <td>
                                    <div class="btn btn-default" style="background-color:#fe4c50;margin-left:20px;"><a href="#" class="butCart" data-id="@item.Id" style="color:whitesmoke"><i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;Add to cart</a></div>
                                    <div class="btn btn-default" style="background-color:#fe4c50;margin-left:20px;"><a href="#" class="RemovefromWishlist" data-id="@item.Id" style="color:whitesmoke"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Remove from WishList</a></div>

