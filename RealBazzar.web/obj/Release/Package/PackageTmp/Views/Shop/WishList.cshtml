    <script>
        var Productcartlist;

        $(".RemovefromWishlist").click(function () {
            existingProductCookies = $.cookie('WishList');
            Productcartlist = existingProductCookies.split('-');
            var productId = $(this).attr('data-id');
            function arrayRemove(Productcartlist, productId) {

                return Productcartlist.filter(function (ele) {
                    return ele != productId;
                });

            }

            Productcartlist = arrayRemove(Productcartlist, productId);

            $.cookie('WishList', Productcartlist.join('-'), { path: '/' });
             swal("Ok", "Your Product is removed From WishList", "warning");
            window.location = '@Url.Action("WishList","Shop")';
            removeWishList();
